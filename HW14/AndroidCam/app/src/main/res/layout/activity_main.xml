<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mattcruz10gmail.androidcam.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing yet"
            android:id="@+id/cameraStatus"/>

        <SurfaceView
            android:id="@+id/surfaceview"
            android:layout_width="640px"
            android:layout_height="480px" />


        <TextureView
            android:id="@+id/textureview"
            android:layout_width="1px"
            android:layout_height="1px" />

        <TextView
            android:id="@+id/textViewRed"
            android:text="Red Threshold: 28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <SeekBar
            android:id="@+id/seekRed"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:progress="28"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            />

        <TextView
            android:id="@+id/textViewGreen"
            android:text="Green Threshold: 74"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <SeekBar
            android:id="@+id/seekGreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="74"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            />

        <TextView
            android:id="@+id/textViewBlue"
            android:text="Blue Threshold: 50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <SeekBar
            android:id="@+id/seekBlue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:progress="50"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            />


    </LinearLayout>


</RelativeLayout>
